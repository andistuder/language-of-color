%h2.top-spaced Current Members

%table.table.table-condensed.table-striped
  %thead
    %tr
      %th First name
      %th Last name
      / %th Title
      %th Country
      - if current_member.present?
        / %th Job title
        / %th Organisation
      %th Link
      - if current_member.present?
        %th Email
      / %th
      / %th
      / %th

  %tbody
    - @members.each do |member|
      %tr
        %td= member.first_name
        %td= member.last_name
        / %td= member.title
        %td= member.country_of_residence
        - if current_member.present?
          / %td= member.job_title
          / %td= member.organisation
        %td
          - if member.link.present?
            %a{href: member.link, title: member.link, target: '_blank'}
              %i.fa.fa-link
        - if current_member.present?
          %td
            %a{href: "mailto:#{member.email}", title: member.email, target: '_blank'}
              %i.fa.fa-envelope-o
        / %td= link_to 'Show', member
        / %td= link_to 'Edit', edit_member_path(member)
        / %td= link_to 'Destroy', member, :method => :delete, :data => { :confirm => 'Are you sure?' }
